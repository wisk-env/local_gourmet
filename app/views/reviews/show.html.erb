<div class="wrap-container">
  <h2><%= "飲食店 #{@restaurant.name} の口コミ詳細" %></h2>
  <div class="white-background-container">
    <div class="review-user">
      <div>
        <%= image_tag @review.user.avatar, class: "review-user-icon" %>
      </div>
      <div class="detail-review-user-name">
        <%= @review.user.name %>
      </div>
    </div>
    <div>
      <div class="review-top-elements">
        <div>
          <% if @review.image.present? %>
            <div class="menu-image">
              <%= image_tag @review.image, class: "menu-image" %>
            </div>
          <% else %>
            <div class="menu-image no-image">NO IMAGE</div>
          <% end %>
        </div>
        <div>
          <div class="font-brown">
            注文したメニュー名
          </div>
          <div class="margin-bottom"><%= @review.menu %></div>
          <div class="font-brown">
            料金
          </div>
          <div class="margin-bottom"><%= "¥ #{@review.price}" %></div>
          <div class="margin-bottom"><%= "#{@review.visit_date} #{@review.visit_time}の時間帯に #{@review.number_of_visitors} 名で利用" %></div>
        </div>
      </div>
      <div class="margin-bottom">
        <div class="font-brown">
          ジャンル
        </div>
        <% @review.genres.each do |genre| %>
          <div class="tag genre-tag font-size-middle"><%= genre.name %></div>
        <% end %>
      </div>
      <div class="margin-bottom">
        <div class="font-brown">
          お店の雰囲気・特徴・評価ポイントなど
        </div>
        <% @review.feedback_options.each do |feedback_option| %>
          <div class="tag feedback-tag font-size-middle"><%= feedback_option.option_title %></div>
        <% end %>
      </div>
      <div class="font-brown">
        コメント
      </div>
      <div><%= @review.comment %></div>
      <div>
        <% if current_user.own?(@review) %>
          編集・削除ボタン
        <% else %>
          <div id="like_buttons_<%= @review.id %>" class="like-button-container">
            <%= render 'shared/like_button', review: @review %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
