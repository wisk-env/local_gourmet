<h3>口コミを投稿したいお店を検索</h3>

<input id="search-form" type="textbox" placeholder="店舗名で検索">
<input type="button" value="検索" onclick="codeAddress()">

<h3>検索結果</h3>
<div>お店の住所：</div>
<div id="addressDisplay">検索結果がありません</div>

<%= form_with model: @restaurant, url: new_restaurant_registered_status_path(lat: @lat, lng: @lng, address: @address), method: :get, local: true do |f| %>
  <div>
    <%= f.hidden_field :lat, id: :lat %>
    <%= f.hidden_field :lng, id: :lng %>
    <%= f.hidden_field :address, id: :address %>
    <%= f.submit "店舗が登録済みか検索" %>
  </div>
<% end %>

<p>地図</p>
<div id='map'></div>

<style>
#map {
  height: 400px;
  width: 300px;
}
</style>

<script>
let map
let marker
const addressDis = document.getElementById('addressDisplay')

function initMap() {
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center:  {lat: 35.6803997, lng:139.7690174},
    zoom: 15,  
  });

  marker = new google.maps.Marker({
    position: {lat: 35.6813, lng:139.767066},
    map: map
  });

  <% @restaurants&.each do |restaurant|%>
    ( function() { 
      let markerLatLng = { lat: <%= restaurant.lat %>, lng: <%= restaurant.lng %> };
      let marker = new google.maps.Marker({ 
        position: markerLatLng, 
        map: map 
      });

      let infowindow = new google.maps.InfoWindow({
        position: markerLatLng,
        content: "<a href='<%= restaurant_url(restaurant.id) %>' target='_blank'><%= restaurant.name %></a>"
      });

      marker.addListener('click', function() {
        infowindow.open(map, marker);
      });
    })();
  <% end %>
}

let geocoder
let aft
function codeAddress() {
  let inputAddress = document.getElementById('search-form').value;
  geocoder.geocode( { 'address': inputAddress }, function(results, status) {
    if (status == 'OK') {
      if (aft == true){
          marker.setMap(null);
      }

      map.setCenter(results[0].geometry.location);
          marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location,
      });

      aft = true

      document.getElementById('lat').value = results[0].geometry.location.lat();
      document.getElementById('lng').value = results[0].geometry.location.lng();
      document.getElementById('address').value = results[0].formatted_address.slice(13);
      addressDis.innerHTML = results[0].formatted_address.slice(13);

      google.maps.event.addListener( marker, 'dragend', function(ev){
        document.getElementById('lat').value = ev.latLng.lat();
        document.getElementById('lng').value = ev.latLng.lng();
    });

    geocoder.geocode({ 'location': marker.getPosition() }, function(results, status) {
      if (status == "OK"){
        addressDis.innerHTML = results[0].formatted_address.slice(13);
      } else {
        alert("Geocode 取得に失敗しました：" + status);
      }
    });
    } else {
      alert('該当する結果がありませんでした：' + status);
    }
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap" async defer></script>
