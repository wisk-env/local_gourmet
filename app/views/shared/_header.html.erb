<div class='header-logo'>
  <%= image_tag('local_gourmet.svg') %>
</div>
<% if current_user %>
  <div class="header-end">
    <div class="header-my-page-link">
      <%= link_to profile_path, class: "header-login-user" do %>
        <div><%= image_tag current_user.avatar, class: "header-user-icon" %></div>
        <div class="header-login-user-name">
          <%= current_user.name %>
        </div>
      <% end %>
    </div>
    <div class="header-end-button">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout-button" %>
    </div>
  </div>
<% else %>
  <div class='header-end font-size-S'>
    <%= link_to "ログイン", new_user_session_path, class: "header-end-button" %>
    <%= link_to "新規登録", new_user_registration_path, class: "header-end-button" %>
  </div>
<% end %>
