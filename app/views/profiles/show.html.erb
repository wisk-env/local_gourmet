<div class="wrap-container">
  <h2>マイページ</h2>
  <div class="user-container">
    <div>
      <%= image_tag @user.avatar, class: "avatar-image" %>
    </div>
    <div class="user-info-box">
      <div class="user-name"><%= @user.name %></div>
      <div class="user-email"><%= @user.email %></div>
      <div class="profile-edit-button">
        <%= link_to edit_user_registration_path, class: "profile-edit-button-link" do %>
          プロフィール編集
        <% end %>
      </div>
    </div>
  </div>

  
  <ul class="tab-list center-block">
    <li class="tab tab-active">
      ブックマークしたお店
    </li>
    <li class="tab">
      投稿した口コミ
    </li>
  </ul>
  <div class="center-block">
    <div class="tab-container">
      <div class="tab-contents active-contents">
        <%= render 'shared/bookmarks', bookmarks: @bookmark_restaurants %>
      </div>
      <div class="tab-contents">
        <%= render 'shared/reviews', reviews: @reviews %>
      </div>
    </div>
  </div>
</div>

<% content_for :js do %>
  <%= javascript_import_module_tag "profile/show" %>
<% end %>
