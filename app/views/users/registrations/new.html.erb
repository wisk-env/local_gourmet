<div class="content">
  <div class="registration-container">
    <h2>ユーザー登録</h2>
    <%= render "users/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 桁以上)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'submit-btn' %>
      </div>
    <% end %>

  </div>
</div>
